{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": [
        "components/*"
      ],
      "@layout/*": [
        "layout/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@products/*": [
        "pages/products"
      ],
      "@category/*": [
        "pages/products/category"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@hoc/*": [
        "lib/hoc/*"
      ],
      "@contexts/*": [
        "lib/contexts/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
